services:
  db:
    image: postgres:15
    environment:
      POSTGRES_USER: demo
      POSTGRES_PASSWORD: demo
      POSTGRES_DB: demo
    ports:
      - "5432:5432"
    volumes:
      - ./seed:/seed
      - ./ingest:/ingest

  agent:
    build:
      context: ./agent_runtime
    environment:
      AGENT_DB_URL: postgresql+psycopg2://demo:demo@db:5432/demo
      POLL_SECONDS: "60"
      RISK_CREATE_THRESHOLD: "70"
      ALERT_THRESHOLD: "85"
      # Optional: set for real Slack alerts
      # SLACK_WEBHOOK_URL: "https://hooks.slack.com/services/..."
      INGEST_DIR: "/ingest"
    volumes:
      - ./ingest:/ingest
    depends_on:
      - db
